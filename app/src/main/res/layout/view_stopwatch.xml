<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/stopwatch_container"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/stopwatch_first"
            android:layout_width="@dimen/w_extraLarge"
            android:layout_height="@dimen/h_extraLarge"
            app:srcCompat="@drawable/zero"/>

    <ImageView
            android:id="@+id/stopwatch_second"
            android:layout_width="@dimen/w_extraLarge"
            android:layout_height="@dimen/h_extraLarge"
            app:srcCompat="@drawable/zero"/>

    <ImageView
            android:id="@+id/stopwatch_third"
            android:layout_width="@dimen/w_extraLarge"
            android:layout_height="@dimen/h_extraLarge"
            app:srcCompat="@drawable/zero"/>
</LinearLayout>